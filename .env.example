# Data Storage Configuration
DATA_DIR=./data/10k_filings

# ChromaDB Configuration
CHROMA_DB_DIR=./data/chroma_db

# Model Cache Directory (for Hugging Face models)
MODEL_CACHE_DIR=./data/model_cache

# Hugging Face Model Configuration
# Embedding model (for document embeddings)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM model (for text generation and analysis)
LLM_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Alternative models:
# For embeddings:
#   - sentence-transformers/all-mpnet-base-v2 (higher quality, slower)
#   - BAAI/bge-small-en-v1.5 (good balance)
#   - sentence-transformers/all-MiniLM-L6-v2 (fast, smaller - default)
#
# For LLM:
#   - microsoft/Phi-3-mini-4k-instruct (3.8B params, good for chat)
#   - meta-llama/Llama-3.2-1B-Instruct (1B params, very fast)
#   - HuggingFaceH4/zephyr-7b-beta (7B params, high quality)
#   - meta-llama/Llama-3.2-3B-Instruct (3B params, balanced - default)

# Model Configuration
USE_8BIT_QUANTIZATION=true
USE_GPU=true
MAX_NEW_TOKENS=512
TEMPERATURE=0.1
BATCH_SIZE=8
DEVICE=auto

# SEC EDGAR Configuration
USER_AGENT=Your Name <your_email@example.com>
